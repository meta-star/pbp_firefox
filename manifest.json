{
    "manifest_version": 2,
    "name": "PBP_Demo-FireFox",
    "description": "PBP_Demo-FireFox",
    "version": "1.0.0",
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "PBP_Demo-FireFox"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "socket.js",
                "listen.js"
            ],
            "run_at": "document_start"
        }
    ],
    "background": {
        "scripts": [
            "socket.js",
            "listen.js"
        ]
    },
    "permissions": [
        "contextMenus",
        "notifications",
        "tabs",
        "webRequestBlocking"
    ],
    "omnibox": {
        "keyword": "PBP"
    }
}